<div class="min-h-screen mt-5 flex items-center justify-center bg-gradient-to-r from-indigo-700 via-purple-700 to-pink-700 px-4">
  <div class="w-full max-w-lg bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-white/20">
    <h2 class="text-3xl font-bold text-center text-white mb-6">
      Edit <span class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-300 to-white">Account</span>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-300 italic">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- New Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <span class="text-xs text-gray-400 italic">(leave blank if you don’t want to change it)</span>
        <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full mt-1 px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-300">Minimum <%= @minimum_password_length %> characters</em>
        <% end %>
      </div>

      <!-- Password Confirmation -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400" %>
      </div>

      <!-- Current Password -->
      <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-200 mb-1" %>
        <span class="text-xs text-gray-400 italic">(required to confirm changes)</span>
        <%= f.password_field :current_password,
              autocomplete: "current-password",
              class: "w-full mt-1 px-4 py-2 rounded-lg bg-white/20 border border-white/30 text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400" %>
      </div>

      <!-- Update Button -->
      <div>
        <%= f.submit "Update Account",
              class: "w-full py-2 px-4 bg-gradient-to-r from-yellow-400 via-orange-400 to-yellow-500 text-gray-900 font-semibold rounded-full shadow-lg hover:scale-105 transform transition duration-300" %>
      </div>
    <% end %>

    <!-- Cancel Account -->
    <div class="mt-8 text-center">
      <h3 class="text-xl font-semibold text-red-400 mb-3">Cancel My Account</h3>
      <p class="text-gray-300 mb-3">Unhappy with S Coin? You can delete your account below.</p>
      <%= button_to "Cancel My Account", registration_path(resource_name),
          method: :delete,
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
          class: "px-5 py-2 bg-red-600 hover:bg-red-700 text-white rounded-full font-semibold shadow-md transition" %>
    </div>

    <!-- Back Link -->
    <div class="mt-6 text-center">
      <%= link_to "← Back", root_path, class: "text-sm text-gray-200 hover:text-yellow-300 transition" %>
    </div>
  </div>
</div>
