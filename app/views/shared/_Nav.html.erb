<header class="fixed top-0 left-0 w-full z-50 backdrop-blur-lg bg-gradient-to-r from-indigo-600/80 via-purple-600/80 to-pink-600/80 shadow-lg border-b border-white/10">
  <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo -->
    <h1 class="text-2xl md:text-3xl font-extrabold tracking-wide">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-300 via-orange-300 to-white drop-shadow-md">S Coin</span>
    </h1>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center space-x-6">
      <% if user_signed_in? %>
        <%= link_to "Dashboard", root_path, class: "text-white hover:text-yellow-300 transition font-medium" %>
        <%= link_to "Sign Out", destroy_user_session_path, 
            data: { turbo_method: :delete }, 
            class: "px-5 py-2 bg-red-600/90 hover:bg-red-700 text-white rounded-full font-semibold shadow-md transition" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, 
            class: "px-5 py-2 bg-yellow-400 hover:bg-yellow-500 text-gray-900 rounded-full font-semibold shadow-md transition" %>
        <%= link_to "Login", new_user_session_path, 
            class: "px-5 py-2 bg-white/90 hover:bg-white text-purple-700 rounded-full font-semibold shadow-md transition" %>
      <% end %>
    </nav>

    <!-- Mobile Menu Button -->
    <button id="menu-btn" class="md:hidden text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-gradient-to-b from-purple-700/90 to-pink-700/90 px-4 pb-4 space-y-3 shadow-lg">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", root_path, class: "block text-white hover:text-yellow-300 transition font-medium" %>
      <%= link_to "Sign Out", destroy_user_session_path, 
          data: { turbo_method: :delete }, 
          class: "block w-full text-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-full font-semibold transition" %>
    <% else %>
      <%= link_to "Sign Up", new_user_registration_path, 
          class: "block w-full text-center px-4 py-2 bg-yellow-400 hover:bg-yellow-500 text-gray-900 rounded-full font-semibold transition" %>
      <%= link_to "Login", new_user_session_path, 
          class: "block w-full text-center px-4 py-2 bg-white/90 hover:bg-white text-purple-700 rounded-full font-semibold transition" %>
    <% end %>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  menuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>
