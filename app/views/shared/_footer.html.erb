<footer class="relative mt-16  py-10 px-6 border-t backdrop-blur-lg bg-gradient-to-r from-indigo-600/80 via-purple-600/80 to-pink-600/80 shadow-lg border-b border-white/10">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <!-- Brand -->
    <div>
      <h2 class="text-2xl font-extrabold bg-gradient-to-r from-cyan-400 to-indigo-500 bg-clip-text text-transparent">
        S Coin
      </h2>
      <p class="mt-3 text-sm text-white  leading-relaxed">
        Empowering the next generation of digital economy — earn, trade, and connect securely in the decentralized world.
      </p>
    </div>

    <!-- Quick Links -->
    <div class="flex flex-col space-y-2 text-sm">
      <h3 class="text-lg font-semibold text-white mb-2">Quick Links</h3>
      <%= link_to "Home", root_path, class: " text-white  hover:text-indigo-400 transition" %>
      <%= link_to "About", "#", class: "  text-white  hover:text-indigo-400 transition" %>
      <%= link_to "Wallet", root_path, class: " text-white  hover:text-indigo-400 transition" %>
      <%= link_to "Profile", edit_user_registration_path, class: "  text-white  hover:text-indigo-400 transition" %>
      <%= link_to "Contact", "#", class: "  text-white  hover:text-indigo-400 transition" %>
    </div>

    <!-- Newsletter / Socials -->
    <div>
      <h3 class="text-lg font-semibold text-white mb-3">Stay Connected</h3>
      <form action="#" method="POST" class="flex items-center bg-white/10 rounded-lg overflow-hidden">
        <input type="email" placeholder="Enter your email" class="w-full px-4 py-2 bg-transparent text-gray-200 placeholder-gray-400 focus:outline-none">
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 px-4 py-2 font-semibold text-white transition">Join</button>
      </form>
      <div class="flex space-x-4 mt-4 text-xl">
        <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-twitter"></i></a>
        <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-discord"></i></a>
        <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-github"></i></a>
        <a href="#" class="hover:text-indigo-400 transition"><i class="fab fa-telegram"></i></a>
      </div>
    </div>
  </div>

  <div class="mt-10 border-t border-white/10 pt-6 text-center text-sm text-white  ">
    © <%= Time.now.year %> S Coin — All Rights Reserved.
  </div>
</footer>

<!-- FontAwesome (for icons) -->
<script src="https://kit.fontawesome.com/4a2f6bfb4f.js" crossorigin="anonymous"></script>
